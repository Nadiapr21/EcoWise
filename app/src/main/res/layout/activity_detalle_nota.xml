<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/etTituloDetalle"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:padding="12dp"
        android:hint="Editar Título"
        android:fontFamily="@font/misans"
        android:background="@null"
        android:inputType="textMultiLine"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />


    <EditText
        android:id="@+id/etContenidoDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="12dp"
        android:background="@null"
        android:layout_below="@+id/etTituloDetalle"
        android:hint="Editar Contenido"
        android:fontFamily="@font/misans"
        android:minLines="6"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnGuardarCambios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Cambios"
        android:background="@color/black"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp" />

    <!-- Botón para Eliminar Nota -->
    <Button
        android:id="@+id/btnEliminarNota"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_above="@+id/btnGuardarCambios"
        android:layout_alignEnd="@+id/btnGuardarCambios"
        android:layout_centerInParent="true"
        android:layout_marginEnd="170dp"
        android:contentDescription="Guardar nota"
        android:layout_marginBottom="-108dp"
        android:background="@drawable/ic_delete"
        android:textColor="@android:color/white" />


</RelativeLayout>