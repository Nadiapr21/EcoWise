<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">


    <HorizontalScrollView
        android:id="@+id/meses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/llMeses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/vision_general"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/graficaBarras"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginHorizontal="15dp">
            </com.github.mikephil.charting.charts.BarChart>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <!-- Dentro del CardView, colocamos un LinearLayout para organizar el contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- CoordinatorLayout dentro del CardView para administrar el RecyclerView y BottomNavigation -->
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="325dp">

                <!-- RecyclerView dentro del CoordinatorLayout -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:scrollbars="vertical" />

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottomNavigationView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/white" />

                <!-- BottomNavigationView dentro del CoordinatorLayout -->
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/fabAddGasto"
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:text="@string/add_gasto"
        android:padding="16dp"
        android:drawablePadding="10dp"
        android:paddingEnd="20dp"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_add_1"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        app:iconGravity="textStart"
        app:iconPadding="9dp"
        android:elevation="8dp"
        android:background="@drawable/circle_shape"/>

</LinearLayout>
