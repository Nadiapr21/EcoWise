<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">


    <HorizontalScrollView
        android:id="@+id/meses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/llMeses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/vision_general"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/graficaBarras"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginHorizontal="15dp">
            </com.github.mikephil.charting.charts.BarChart>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <!-- RecyclerView dentro del CoordinatorLayout -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:scrollbars="vertical" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="15dp">

                <Button
                    android:id="@+id/fabAddGasto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/circle_shape2"
                    android:drawableStart="@drawable/ic_add2"
                    android:paddingStart="10dp"
                    android:elevation="9dp"
                    android:text="@string/add_gasto"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="130dp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/fabAddIngreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_shape"
                    android:drawableStart="@drawable/ic_add_1"
                    android:text="@string/add_ingreso"
                    android:elevation="9dp"
                    android:paddingStart="10dp"
                    android:visibility="gone"
                    android:layout_gravity="end|bottom"
                    android:layout_marginBottom="80dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/white"/>


                <Button
                    android:id="@+id/fabPrincipal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="9dp"
                    android:layout_gravity="end|bottom"
                    android:background="@drawable/circle_shape"
                    android:drawableStart="@drawable/ic_add_1"
                    android:paddingStart="30dp"/>


</FrameLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white" />

</LinearLayout>

