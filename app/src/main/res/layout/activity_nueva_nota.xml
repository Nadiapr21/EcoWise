<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <EditText
        android:id="@+id/etTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titulo"
        android:padding="12dp"
        android:fontFamily="@font/misans"
        android:layout_marginRight="60dp"
        android:background="@drawable/underline_bg"
        android:layout_marginBottom="12dp"
        android:textColorHint="#ADADAD"
        android:layout_marginTop="60dp"
        android:textSize="25sp"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/etContenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Empieza a escribir"
        android:padding="12dp"
        android:fontFamily="@font/misans"
        android:layout_marginTop="10dp"
        android:background="@drawable/underline_bg"
        android:layout_below="@+id/etTitulo"
        android:layout_marginBottom="12dp"
        android:textSize="14sp"
        android:minLines="30"
        android:gravity="top"/>


    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="37dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/ic_tick"
        android:contentDescription="Guardar nota" />

</RelativeLayout>